

@font-face
  font-family: Arial

body
  position: relative
  width: 80%
  margin: 0 auto
  font-family: Arial

:root
  --primary-color: #28a745
  --primary-blue: #007aff
  --light-grey: #777777
  --dark-grey: #353a40

*, input, select, textarea, option, button
  outline: none !important

button:focus
  outline: none !important

.w-100p
  width: 100px

.w-200px
  width: 200px

.w-300px
  width: 300px

.w-40
  width 40%

.w-35
  width 35%

.bold
  font-weight 600

.white-text
  color #ffffff

.mat-checkbox-inner-container
  margin-right: 0 !important
  margin-left: 8px !important

.title, .sub-title
  color: var(--primary-color)

.title
  font-size: 28px
  font-weight: bold
  line-height: 1.9W

.green-underline
  border-bottom: 2px solid lightGreenColor

.sub-title
  font-size: 18px
  //border-bottom: 2px solid var(--primary-color)
  line-height: 1.5w
  padding-right: 3px

.logo
  width: 237px
  cursor: pointer
  outline: none


.tab-list
  color: var(--primary-color)
  display: flex
  margin-bottom: 15px


.tab
  color: var(--primary-color)
  min-width: 120px
  text-align: center

.box-shadow
  box-shadow: 0 3px 3px 2px rgba(0, 0, 0, 0.23)

.icon
  width: 20px
  height: 20px
  cursor: pointer

.main-btn
  border-radius 4px
  background-color: var(--primary-color)
  color: #fff

.secondary-btn
  border-radius 4px
  background-color: var(--primary-blue)
  color: #fff

.reg-btn
  border-radius 4px
  background-color: var(--light-grey)
  color #fff

.btn-outline-success
  border 1px solid var(--primary-color) !important
  color var(--primary-color)

/*material*/

.mat-select
  border-bottom 1px solid !important
